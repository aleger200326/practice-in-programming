#include <string>
using namespace std;

string rot13(string msg)
{
    string s="";
    for(int i=0;i<msg.length();++i)
    {
        if(isalpha(msg[i]))
        {
            if(msg[i]>=65 && msg[i]<=90)
            {
                if(msg[i]+13>90)
                {
                    s+=((msg[i]+13)%91+65);
                }
                else
                {
                    s+=msg[i]+13;
                }
            }
            else
            {
                if(msg[i]+13>122)
                {
                    s+=(msg[i]+13)%123+97;
                }
                else
                {
                    s+=msg[i]+13;
                }
            }
        }
        else
        {
            s+=msg[i];
        }
    }
    return s;
}
